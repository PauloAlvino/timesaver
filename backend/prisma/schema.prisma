generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  avatarUrl String?
  refresh RefreshToken?
  createdAt DateTime @default(now())
}

model RefreshToken {
  id Int @id @default(autoincrement())
  token String @unique
  userId Int @unique
  user  User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}